{% extends 'layout.html.twig' %}

{% block body %}
    <h1>Liste des chapitres</h1>

    <table>
        <thead>
            <tr>
                <th>Numéro de chapitre</th>
                <th>Titre</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for chapter in chapters %}
            <tr>
                <td><a class="actionLink" href="{{ path('chapter_show', { 'idChapter': chapter.idChapter }) }}">{{ chapter.chapterNumber }}</a></td>
                <td>{{ chapter.chapterTitle }}</td>
                <td>
                    <ul>
                        <li>
                            <a class="actionLink" href="{{ path('chapter_show', { 'idChapter': chapter.idChapter }) }}">Détail</a>
                        </li>
                        <li>
                            <a class="actionLink" href="{{ path('chapter_edit', { 'idChapter': chapter.idChapter }) }}">Éditer</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a class="actionLink" href="{{ path('chapter_new') }}">Créer un nouveau chapitre</a>
        </li>
    </ul>
{% endblock %}
