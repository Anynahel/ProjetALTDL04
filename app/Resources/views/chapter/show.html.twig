{% extends 'base.html.twig' %}

{% block body %}
    <h1>Chapter</h1>

    <table>
        <tbody>
            <tr>
                <th>Content</th>
                <td>{{ chapter.content }}</td>
            </tr>
            <tr>
                <th>Chaptertitle</th>
                <td>{{ chapter.chapterTitle }}</td>
            </tr>
            <tr>
                <th>Chapternumber</th>
                <td>{{ chapter.chapterNumber }}</td>
            </tr>
            <tr>
                <th>Idchapter</th>
                <td>{{ chapter.idChapter }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('chapter_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('chapter_edit', { 'idChapter': chapter.idChapter }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
