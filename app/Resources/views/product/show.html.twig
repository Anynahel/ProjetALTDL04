{% extends 'layout.html.twig' %}

{% block body %}
    <h1>Détail du produit</h1>

    <table>
        <tbody>
            <tr>
                <th>Titre</th>
                <td>{{ product.title }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ product.image }}</td>
            </tr>
            
            <tr>
                <th>Sommaire</th>
                <td>{{ product.summary }}</td>
            </tr>
            <tr>
                <th>Mots clés</th>
                <td>{{ product.keywords }}</td>
            </tr>
            <tr>
                <th>Tutoriel</th>
                <td>{% if product.isTutorial %}Oui{% else %}Non{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
    {% if product.isTutorial %}
    {% else %}
        <h3>Chapitres du cours :</h3>
        {% for chapter in chapters %}
            
            <p class="chapter">
                <a class="actionLink" href="{{ path('chapter_show', {'idChapter': chapter.idChapter}) }}">
                   {{ chapter.ChapterNumber }} - {{ chapter.ChapterTitle }}</a>
            </p>
        {% endfor %}   
        <li>
            <a class="actionLink" href="{{ path('chapter_new',{'idProd': product.idProduct , 'ProdName': product.title}) }}">Créer un chapitre pour ce cours</a>
        </li> 

        {% endif %}
        <li>
            <a class="actionLink" href="{{ path('product_index') }}">Retour</a>
        </li>
        <li>
            <a class="actionLink" href="{{ path('product_edit', { 'idProduct': product.idProduct }) }}">Éditer</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input class="actionLink" type="submit" value="Supprimer">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
