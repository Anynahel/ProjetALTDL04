{% extends 'layout.html.twig' %}

{% block body %}
    <h1>Édition du cours <strong>{{product.title }}</strong></h1>
<div class="container">
    {{ form_start(edit_form) }}
    <img src="{{ asset('uploads/')}}{{ product.image }}" width='200' height='100' />
        {{ form_widget(edit_form) }}
        <input class="actionLink" type="submit" value="Éditer" />
    {{ form_end(edit_form) }}
</div>
    <ul>
        <li>
            <a class="actionLink" href="{{ path('product_index') }}">Retour</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input class="actionLink" type="submit" value="Supprimer">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
{% block javascripts %}
<script>
    CKEDITOR.replace( 'form[summary]' );
</script>  
{% endblock %}